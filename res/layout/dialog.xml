<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
     >
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:layout_weight="1">
    
    <Button
        android:id="@+id/keypad_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:background="#ffffff"
       />
	<Button
        android:id="@+id/keypad_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:background="#ffffff"
       />
	<Button
        android:id="@+id/keypad_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:background="#ffffff"
       />
	<Button
        android:id="@+id/keypad_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:background="#ffffff"
       />
	<Button
        android:id="@+id/keypad_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:background="#ffffff"
       />
</LinearLayout>
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:layout_weight="1">
	<Button
        android:id="@+id/keypad_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:background="#ffffff"
       />
	<Button
        android:id="@+id/keypad_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:background="#ffffff"
       />
	<Button
        android:id="@+id/keypad_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:background="#ffffff"
       />
	<Button
        android:id="@+id/keypad_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:background="#ffffff"
       />
	<Button
        android:id="@+id/keypad_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="clear"
        android:background="#ffffff"
       />
	</LinearLayout>
</LinearLayout>
